<!-- regsiter begin -->
<div class="register">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xl-7 col-lg-8 col-md-8">
				<div class="section-title">
					<h2>Register To Predict Now</h2>
					<p>Bettix is the most advanced sports trading & affialiate platform and highest stakes across multiple bookmakers and exchanges.</p>
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-xl-9 col-lg-9">
				
				<div class="all-form">
					<div class="single-form" id="first-step">
						<form>
							<div>
								<input asp-for="Input.FirstName" type="text" value="" id="firstName" required>
								<label for="firstName">First Name</label>
							</div>
							<div>
								<input asp-for="Input.LastName" type="text" value="" id="lastName" required>
								<label for="lastName">Last Name</label>
							</div>
							<div>
								<input asp-for="Input.Email" type="email" id="emailAdd" required>
								<label for="emailAdd">Email Address</label>
							</div>
							<div>
								<input asp-for="Input.Password" type="password" id="password" required>
								<label for="password">Password</label>
							</div>
							<div>
								<input asp-for="Input.ConfirmPassword" type="password" id="paswordconfirm" required>
								<label for="paswordconfirm">Confirm Password</label>
							</div>
							<div>
								<input asp-for="Input.State" type="text" id="state" required>
								<label for="state">State</label>
							</div>
							<div>
								<input asp-for="Input.Country" type="text" id="country" required>
								<label for="country">Country</label>
							</div>
							<div>
								<input asp-for="Input.DateOfBirth" type="date" value="" id="dOb" required>
								<label for="dOb">Date Of Birth</label>
							</div><p>By clicking "NEXT", you confirm that you have read and understood the Bettix <a href="#">Privacy & Coockie Policy</a>, and agree to its terms.</p>
							<button class="next" type="submit">Submit</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- regsiter end -->

