@page
@model RegisterModel

@{
	ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/FrontendTheme/assets/css/register-page-responsive.css">



<!-- regsiter begin -->
<div class="register">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xl-7 col-lg-8 col-md-8">
				<div class="section-title">
					<h2>Register To Predict Now</h2>
					<p>Bettix is the most advanced sports trading & affialiate platform and highest stakes across multiple bookmakers and exchanges.</p>
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-xl-9 col-lg-9">
				<div class="sign-up-step">
					<ul>
						<li class="active">
							<span class="icon">
								<svg aria-hidden="true" focusable="false" data-prefix="fal" data-icon="user-circle" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 496 512" class="svg-inline--fa fa-user-circle fa-w-16 fa-fw fa-2x"><path fill="currentColor" d="M248 8C111 8 0 119 0 256s111 248 248 248 248-111 248-248S385 8 248 8zm128 421.6c-35.9 26.5-80.1 42.4-128 42.4s-92.1-15.9-128-42.4V416c0-35.3 28.7-64 64-64 11.1 0 27.5 11.4 64 11.4 36.6 0 52.8-11.4 64-11.4 35.3 0 64 28.7 64 64v13.6zm30.6-27.5c-6.8-46.4-46.3-82.1-94.6-82.1-20.5 0-30.4 11.4-64 11.4S204.6 320 184 320c-48.3 0-87.8 35.7-94.6 82.1C53.9 363.6 32 312.4 32 256c0-119.1 96.9-216 216-216s216 96.9 216 216c0 56.4-21.9 107.6-57.4 146.1zM248 120c-48.6 0-88 39.4-88 88s39.4 88 88 88 88-39.4 88-88-39.4-88-88-88zm0 144c-30.9 0-56-25.1-56-56s25.1-56 56-56 56 25.1 56 56-25.1 56-56 56z" class=""></path></svg>
							</span>
							<span class="text">User Details</span>
						</li>
				
					</ul>
				</div>
				<div class="all-form">
                    <div class="single-form" id="first-step">

                        <form class="form-inline" method="post">
                            <div class="form-group col-md-6">
                                <input asp-for="Input.FirstName" type="text" value="" id="firstName" required>
                                <label for="firstName">First Name</label>
                            </div>
                            <div class="form-group col-md-6">
                                <input asp-for="Input.LastName" type="text" value="" id="lastName" required>
                                <label for="lastName">Last Name</label>
                            </div>

                            <div class="form-group col-md-6">
                                <input asp-for="Input.Email" type="email" id="emailAdd" required>
                                <label for="emailAdd">Email Address</label>
                            </div>
                            <div class="form-group col-md-6">
                                <input asp-for="Input.Password" type="password" id="password" required>
                                <label for="password">Password</label>
                            </div>
                            <div class="form-group col-md-6">
                                <input asp-for="Input.ConfirmPassword" type="password" id="paswordconfirm" required>
                                <label for="paswordconfirm">Confirm Password</label>
                            </div>
                            <div class="form-group col-md-6">
                                <input asp-for="Input.State" type="text" id="state" required>
                                <label for="state">State</label>
                            </div>
                            <div class="form-group col-md-6">
                                <input asp-for="Input.Country" type="text" id="country" required>
                                <label for="country">Country</label>
                            </div>
                            <div class="form-group col-md-6">
                                <input asp-for="Input.DateOfBirth" type="date" value="" id="dOb" required>
                                <label for="dOb">Date Of Birth</label>
                            </div><p>By clicking "NEXT", you confirm that you have read and understood the Bettix <a href="#">Privacy & Coockie Policy</a>, and agree to its terms.</p>
                            
							<button class="next" type="submit">Continue <i class="fa fa-mail-forward"></i></button>
						</form>

                    </div>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
