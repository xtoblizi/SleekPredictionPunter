@model IEnumerable<SleekPredictionPunter.Model.Packages.PackageDto>

@{
	ViewData["Title"] = "FrontEndIndex";
}





<div class="schedule">
	<div class="container">
		<section id="main-content">
			<section class="wrapper site-min-height">
				<div class="row">
					<div class="col-lg-12">
						@foreach (var item in Model.ToList())
						{
							<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
								<div class="custom-box">
									<div class="servicetitle">
										<h4>@item.PackageName</h4>
										<hr style="color:red; background-color:red">
									</div>
									<div class="icn-main-container">
										<span class="icn-container"> <span> &#8358;</span>@item.Price</span>
									</div>
									<p>@item.Description </p>

									<ul class="pricing">
										<span>150 Mb Storage</span>
										<li>1 Domain</li>
										<li>2 Sub Domains</li>
										<li>3 MySQL DBs</li>
										<li>2 Emails</li>
										<li>WordPress Installation</li>
										<li>24/7 Support</li>
									</ul>
									<a class="btn btn-theme" href="#">Subscribe Now</a>
								</div>
								<!-- end custombox -->
							</div>
						}

						<!-- end col-4 -->

					</div>
					<!--  /col-lg-12 -->
				</div>
				<!--  /row -->
			</section>
			<!-- /wrapper -->
		</section>

	</div>
</div>




