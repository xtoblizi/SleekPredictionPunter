@model IEnumerable<SleekPredictionPunter.Model.PredictionCategory>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int sn = 1;
}

<section class="container-fluid" style="padding:10px;">
	<div class="row">
		<div class="col-lg-12">
			<div class="form-panel">
				<h2 class="title"> List of Odds Category</h2>
				@*<a asp-action="Create">Create New</a>*@
			</div>
		</div>
	</div>
</section>


<section class="container-fluid" style="padding:10px;">
	<div class="row mt">
		<div class="col-md-12">
			<div class="content-panel" style="padding:20px">
				<div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                        <a asp-action="Create" class="btn btn-success">Add Odd Category</a> |
                        <a asp-action="CreateMatchCategory" class="btn btn-primary">Add/View Match Category</a> |
                        <a asp-action="CreateCustomCategory" class="btn btn-warning">Add/view Custom Category</a>
                    </div>
				</div>
				<br />
				<div class="table-responsive" style="padding:20px">
					<table class="table table-striped table-advance table-hover table-responsive">
						<thead>
							<tr>
								<th>
									S/N
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CategoryName)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.CategoryDescription)
								</th>
								
								<th>
									@Html.DisplayNameFor(model => model.DateCreated)
								</th>
								<th>
									@Html.DisplayNameFor(model => model.EntityStatus)
								</th>
								
								<th>
									Action
								</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
							<tr>
								<td>
									@(sn++)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CategoryName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.CategoryDescription)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.DateCreated)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.EntityStatus)
								</td>
								
								<td>
									<a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-success btn-xs"><i class="fa fa-check"></i></a>
									<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
									<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
								</td>
								
							</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>


