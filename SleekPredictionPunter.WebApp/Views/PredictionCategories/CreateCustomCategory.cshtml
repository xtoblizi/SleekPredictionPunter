@model SleekPredictionPunter.Model.CustomCategory

@{
    ViewData["Title"] = "CreateCustomCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sn = 1;
}

<h2>Create Sport Category</h2>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="CreateCustomCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>S/N</th>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <td>Action
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in ViewBag.CustomCategory as IEnumerable<CustomCategory>)
            {
            <tr>
                <td>@(sn++)</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>@item.EntityStatus</td>
                <td><a asp-action="DeleteDynamic" asp-route-id="@item.Id" asp-route-categoryEnum="@CategoriesType.SportCategory" asp-route-viewToReturnTo="CreateCustomCategory" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a></td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

