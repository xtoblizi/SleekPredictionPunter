@model SleekPredictionPunter.Model.Prediction

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Prediction</h2>
<hr />
<h3 class="text-danger">
    @if(ViewData["ErrorMessage"] != null)
	{
        @ViewData["ErrorMessage"]
	}
</h3>
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12 text-danger"></div>

            <div class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12 form-group">
                <label asp-for="MatchId" class="control-label"></label>
                <select asp-for="MatchId" class="form-control" asp-items="ViewBag.MatchId" required></select>
            </div>

            <div class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12 form-group">
                <label asp-for="PredictionCategoryId" class="control-label"></label>
                <select asp-for="PredictionCategoryId" class="form-control" asp-items="ViewBag.PredictionCategoryId"></select>
            </div>
            <div class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12 form-group">
                <label asp-for="BetCategoryId" class="control-label"></label>
                <select asp-for="BetCategoryId" class="form-control" asp-items="ViewBag.BetCategoryId"></select>
            </div>

            <div class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12  form-group">
                <label asp-for="PricingPlanId" class="control-label"></label>
                <select asp-for="PricingPlanId" class="form-control" asp-items="ViewBag.PricingPlanId"></select>
            </div>

            <div class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12 form-group">
                <label asp-for="ClubAOdd" class="control-label"></label>
                <input asp-for="ClubAOdd" class="form-control" title="this field is optional" placeholder="Example 1.2 [optional]" />
                <span asp-validation-for="ClubAOdd" class="text-danger"></span>
            </div>

            <div class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12 form-group">
                <label asp-for="ClubBOdd" class="control-label"></label>
                <input asp-for="ClubBOdd" class="form-control" title="this field is optional" placeholder="Example 1.2 [optional]" />
                <span asp-validation-for="ClubBOdd" class="text-danger"></span>
            </div>

            <div class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12 form-group">
                <label asp-for="ClubAScore" class="control-label"></label>
                <input asp-for="ClubAScore" class="form-control" title="this field is optional,input only if you want to predict correct scores" placeholder="Example: 3 [optional]" />
                <span asp-validation-for="ClubAScore" class="text-danger"></span>
            </div>

            <div class="col-md-6 col-lg-4 col-xl-3 col-sm-6 col-xs-12 form-group">
                <label asp-for="ClubBOdd" class="control-label"></label>
                <input asp-for="ClubBOdd" class="form-control" title="this field is optional.input only if you want to predict correct scores" placeholder="Example 4 [optional]" />
                <span asp-validation-for="ClubBOdd" class="text-danger"></span>
            </div>
            <br/>
            <div class="row">
                <div>
                    &nbsp; &nbsp;
                    <input type="submit" value="Create" class="btn btn-default" /> <br /> <br />

                    &nbsp; &nbsp;
                    <a asp-action="Index">Back to Predictions</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
