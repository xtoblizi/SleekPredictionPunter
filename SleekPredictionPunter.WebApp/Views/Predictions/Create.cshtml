@model SleekPredictionPunter.AppService.PredictionAppService.Dtos.PredictionDto

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}

<div class="row mt">
    <div class="col-sm-8 col-md-8 col-lg-8" style="margin-left:50px; margin-top:70px">
        <hr />
        <h3>
            <i class="fa fa-angle-right">
            </i>
            Predictions/Create
        </h3>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="PredictionType" class="control-label"></label>
                        <select class="form-control" name="PredictionType">
                            <option>Free Prediction</option>
                            <option>Premium Prediction</option>
                            <option></option>
                        </select>
                        <span asp-validation-for="PredictionType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClubA" class="control-label"></label>
                        <input asp-for="ClubA" class="form-control" />
                        <span asp-validation-for="ClubA" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ClubB" class="control-label"></label>
                        <input asp-for="ClubB" class="form-control" />
                        <span asp-validation-for="ClubB" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PredictionValue" class="control-label"></label>
                        <input asp-for="PredictionValue" class="form-control" />
                        <span asp-validation-for="PredictionValue" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeofFixture" class="control-label"></label>
                        <input asp-for="TimeofFixture" class="form-control" />
                        <span asp-validation-for="TimeofFixture" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="FileA" class="control-label"></label>
                        <input asp-for="FileA" type="file" class="form-control" />
                        <span asp-validation-for="FileA" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FileB" class="control-label"></label>
                        <input asp-for="FileB" type="file" class="form-control" />
                        <span asp-validation-for="FileB" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

</div>
</div>
