<div class="breadcrumb-bettix result-page">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-7">
                <div class="breadcrumb-content">
                    <h2>&nbsp;</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="result">
    <div class="container">
        <div class="result-sheet-cover">
            <div class="result-sheet">
                <h4 class="result-title">Free Tips</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th scope="col"></th>
                            <th scope="col">Date & Time</th>
                            <th scope="col">Match</th>
                            <th scope="col">Tips</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.FreeTips != null)
                        {
                            foreach (var prediction in ViewBag.FreeTips)
                            {
                                var getCluALogo = await _clubService.GetByName(prediction.ClubA);
                                var getCluBLogo = await _clubService.GetByName(prediction.ClubB);
                                <tr>
                                    <td>@(sn++)</td>
                                    <th scope="row">
                                        <span class="icon">
                                            <i class="flaticon-football"></i>
                                        </span>
                                    </th>
                                    <td class="date">@prediction.DateCreated</td>
                                    <td class="team-name">
                                        <img src="~/TeamLogo/@(System.IO.Path.GetFileName(getCluALogo.ClubLogRelativePath))" style="width:30px;height:30px" />
                                        @prediction.ClubA <span class="versace">vs</span> @prediction.ClubB <img src="~/TeamLogo/@(System.IO.Path.GetFileName(getCluBLogo.ClubLogRelativePath))" style="width:30px;height:30px" />
                                    </td>
                                    <td class="score">@prediction.PredictionValue</td>
                                    <td>
                                        <a>
                                            <span class="view-icon">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <br />

    <div class="result-sheet-cover" style="width: 100%; background-color:blanchedalmond">
        <div class="result-sheet">
            <h2 class="result-title"><strong> PAID TIPS ..</strong>  </h2>
        </div>
    </div>

    @*<div class="container">

        </div>*@

    <div class="row"></div><br />
    @if (ViewBag.GroupedTipsByBetCategories != null)
    {
        foreach (var item in ViewBag.GroupedTipsByBetCategories as IEnumerable<IGrouping<long, Prediction>>)
        {
            var @getCategoryName = await _betCategory.GetById(item.Key);
            <div class="container">
                <div class="result-sheet-cover">
                    <div class="result-sheet">
                        <h4 class="result-title"> @getCategoryName?.BetCategoryName </h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>S/N</th>
                                    <th scope="col"></th>
                                    <th scope="col">Date & Time</th>
                                    <th scope="col">Match</th>
                                    <th scope="col">Tips</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var prediction in item)
                                {
                                    var getCluALogo = await _clubService.GetByName(prediction.ClubA);
                                    var getCluBLogo = await _clubService.GetByName(prediction.ClubB);
                                    <tr>
                                        <td>@(sn++)</td>
                                        <th scope="row">
                                            <span class="icon">
                                                <i class="flaticon-football"></i>
                                            </span>
                                        </th>
                                        <td class="date">@prediction.DateCreated</td>
                                        <td class="team-name">
                                            <img src="~/TeamLogo/@(System.IO.Path.GetFileName(getCluALogo.ClubLogRelativePath))" style="width:30px;height:30px" />
                                            @prediction.ClubA <span class="versace">vs</span> @prediction.ClubB <img src="~/TeamLogo/@(System.IO.Path.GetFileName(getCluBLogo.ClubLogRelativePath))" style="width:30px;height:30px" />
                                        </td>
                                        <td class="score">@prediction.PredictionValue</td>
                                        <td>
                                            <a>
                                                <span class="view-icon">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </span>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }


        //foreach (var item in getsubscriptions)
        //{

        //}
    }
    else
    {
        <div class="container">
            <div class="result-sheet-cover">
                <div class="result-sheet">
                    <h4 class="result-title">Paid Tips Category </h4>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th scope="col"></th>
                                <th scope="col">Date & Time</th>
                                <th scope="col">Match</th>
                                <th scope="col">Tips</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

</div>
