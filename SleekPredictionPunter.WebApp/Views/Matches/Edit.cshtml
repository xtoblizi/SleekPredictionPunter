@model SleekPredictionPunter.Model.Matches.Match

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
                <label asp-for="ClubA" class="control-label"></label>
                <strong>
                    <input readonly asp-for="ClubA" class="form-control" />
                </strong> 
                <span asp-validation-for="ClubA" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
                <label asp-for="ClubB" class="control-label"></label>
                <strong>
                    <input readonly asp-for="ClubB" class="form-control" />
                </strong>
                <span asp-validation-for="ClubB" class="text-danger"></span>
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
                <label class="control-label">Match Category</label>
                <select asp-for="MatchCategoryId" asp-items="ViewBag.MatchCategoryId" class="form-control"></select>
                <span asp-validation-for="MatchCategory" class="text-danger"></span>
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
                <label class="control-label">Sports Category</label>
                <select asp-for="CustomCategoryId" asp-items="ViewBag.CustomCategoryId" class="form-control"></select>
                <span asp-validation-for="CustomCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
                <label asp-for="TimeofMatch" class="control-label"></label>
                <input asp-for="TimeofMatch" class="form-control" />
                <span asp-validation-for="TimeofMatch" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
                <label asp-for="MatchStatus" class="control-label">Match Status</label>
                <select asp-for="MatchStatus" asp-items="ViewBag.MatchStatus" class="form-control"></select>
                <span asp-validation-for="MatchStatus" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-4">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsSetAsHotPreview" /> Check To Display on HomePage
                    </label>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <input type="submit" value=" Update Match" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
