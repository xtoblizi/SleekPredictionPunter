@model SleekPredictionPunter.Model.ClubDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row mt">
        <div class="col-sm-8 col-md-8 col-lg-8" style="margin-left:50px; margin-top:70px">
            <hr />
            <h3>
                <i class="fa fa-angle-right">
                </i>
                Club/Create
            </h3>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ClubName" class="control-label"></label>
                            <input asp-for="ClubName" class="form-control" />
                            <span asp-validation-for="ClubName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ClubLogo" class="control-label"></label>
                            <input type="file" asp-for="ClubLogo" class="form-control" />
                            <span asp-validation-for="ClubLogo" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>
            </div>
        </div>

