@model IEnumerable<SleekPredictionPunter.Model.Club>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sn = 1;
}

<div class="row mt">
    <div class="col-sm-8 col-md-8 col-lg-8" style="margin-left:50px; margin-top:70px">
        <hr />
        <h3>
            <i class="fa fa-angle-right">
            </i>
            Clubs
        </h3>
        <a asp-action="Create">Add Club</a>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        S/N
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClubName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        Logo
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EntityStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateUpdated)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(sn++)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClubName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <img src="~/TeamLogo/@(System.IO.Path.GetFileName(item.ClubLogRelativePath))" style="width:50px" alt="@item.ClubName" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntityStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateUpdated)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
</div>