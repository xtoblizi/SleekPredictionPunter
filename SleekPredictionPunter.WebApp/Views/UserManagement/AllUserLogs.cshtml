@model SleekPredictionPunter.Model.PredicateForTransactionLog
@inject SleekPredictionPunter.AppService.Plans.IPricingPlanAppService _pricingPlan
@{
    ViewData["Title"] = "AllUserLogs";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var serialNumber = +1;
}

<div class="row mt">
    <!-- /col-lg-12 -->
    <div class="col-lg-12 mt">

        <div class="row content-panel">
            <div class="panel-heading">
                <ul class="nav nav-tabs nav-justified">
                    <li>
                        <a data-toggle="tab" href="#edit">My logs</a>
                    </li>
                </ul>
            </div>

            <div class="row">
                <div class="col-lg-10 col-md-10 col-sm-12">
                    <div class="table-responsive">
                        <table class="table field_wrapper">
                            <thead>
                                <tr>
                                    <th scope="col">S/N</th>
                                    <th scope="col">Package Name</th>
                                    <th scope="col">Medium Paid</th>
                                    <th scope="col">Transaction Status</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                           @if (Model.TransactionLog.Any())
                            {
                                @foreach (var item in Model.TransactionLog)
                                    {
                                    var getPlanById = await _pricingPlan.GetPlanById(item.PlanId);
                                    <tbody>
                                        <tr>
                                            <th scope="row" id="serialnumber">@(serialNumber++)</th>
                                            <td>@getPlanById.PlanName</td>
                                            <td>@item.MediumPaidName</td>
                                            <td>@item.TransactionStatusName</td>
                                            <td>@item.CurrentAmount</td>
                                            <td>
                                                <button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                                                <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                                <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                                            </td>
                                        </tr>
                                    </tbody>
                                 }
                           }
                           else
                           {
                               <p class="align-content-center">No Logs</p>
                           }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /row -->
</div>


