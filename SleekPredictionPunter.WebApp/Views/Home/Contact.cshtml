@model ContactDto
@{
	ViewData["Title"] = "Contact";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contact">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xl-6 col-lg-6 col-md-8">
				<div class="section-title">
					<h2>Get In Touch</h2>
					<p>Predictive Power is one of the most competive and profound sports prediction webplatform with free and premium packages.</p>
				</div>
			</div>
			<div class="col-xl-6 col-lg-6 col-md-8">
                @*<div class="section-title">
                    @if(TempData["ContactCreation"] != null)
                    {
                      <h5 class="text-success text-center">@TempData["ContactCreation"]</h5>
                    }
                </div>*@
			</div>
		</div>
		<div class="row no-gutters">
            <div class="col-xl-8 col-lg-8 col-md-7">
                @if (TempData["ContactCreation"] != null)
                {
                  <h5 class="text-success text-center text-justify">@TempData["ContactCreation"]</h5><br />
                } 

                <div class="contact-form">
                    <form asp-action="Contact">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6">
                                <label for="fullName">First Name</label>
                                <input type="text" asp-for="FirstName" id="firstname" placeholder="Ex: John Doe">
                            </div>
                            <div class="col-xl-6 col-lg-6">
                                <label for="fullName">Last Name</label>
                                <input type="text" asp-for="LastName" id="lastname" placeholder="Ex: John Doe">
                            </div>
                            <div class="col-xl-6 col-lg-6">
                                <label for="phoneNo">Phone No</label>
                                <input type="text" asp-for="PhoneNumber" required id="phoneNo" placeholder="+96 xxx xxx xxx">
                            </div>
                            <div class="col-xl-6 col-lg-6">
                                <label for="emailAdd">Email</label>
                                <input type="text" asp-for="Email" required id="emailAdd" placeholder="Ex: yourmail@do.main">
                            </div>
                            <div class="col-xl-6 col-lg-6">
                                <label for="mailSubject">Subject</label>
                                <input type="text" asp-for="Subject" required id="mailSubject" placeholder="Ex: Service">
                            </div>
                        </div>
                        <label for="yourMessage">Subject</label>
                        <textarea id="yourMessage" asp-for="ContactReason" required placeholder="Ex: Hello Admin!"></textarea>
                        <button class="submit-btn">Submit</button>
                    </form>
                </div>
            </div>
			<div class="col-xl-4 col-lg-4 col-md-5">
				<div class="contact-information" style="color:white; font-weight:bolder; font-size:1.1em">
					<div class="about-site">
						@*<img src="~/FrontendTheme/assets/img/logo.png" alt="" class="logo">*@
						<p>Predictive Power offers you all the best online betting from every corner of the planet with thousands of online betting markets.</p>
					</div>
					<ul class="info-list">
						<li>
							<span class="icon">
