        <div class="result-sheet-cover">
            <div class="result-sheet">
                <h4 class="result-title">Soccer Prediction</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Date & Time</th>
                            <th scope="col">Match</th> 
                            <th scope="col">Prediction</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var prediction in ViewBag.Predictions)
                        {
                        <tr>
                            <th scope="row">
                                <span class="icon">
                                    <i class="flaticon-football"></i>
                                </span>
                            </th>
                            <td class="date">@prediction.TimeofFixture.ToString("ddd, dd MMM hh:mm tt")</td>
                            <td class="team-name"><img src="~/ClubLogo/@(System.IO.Path.GetFileName(prediction.ClubALogoPath))" style="width:40px;height:40px" /> @prediction.ClubA <span class="versace">vs</span> @prediction.ClubB <img src="~/ClubLogo/@(System.IO.Path.GetFileName(prediction.ClubBLogoPath))" style="width:40px;height:40px" /></td>
                            <td class="score">@prediction.PredictionValue</td> 
                            <td>
                                <a >
                                    <span class="view-icon">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </span>
                                </a>
                            </td>
                        </tr>
                        }
                        
                        
                    </tbody>
                </table>
            </div>
        </div>
   
    </div>
