@using (Html.BeginForm("MyWallet", "Wallet", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="demo">
        <div class="container">
            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 col-sm-6 col--6">
                            <div class="pricingTable">
                                <div class="pricingTable-header">
                                    <h3 class="title">@item.PricingPlanModel.PlanName</h3>
                                </div>
                                <div class="pricing-content">
                                    <div class="price-value">
                                        <span class="amount">&#8358;@item.PricingPlanModel.Price</span>
                                        @*<span class="duration">Benefits</span>*@
                                        <hr style="background-color:darkgray;" />
                                    </div>
                                    <div id="benefit" class="justify-content-start">
                                        @foreach (var itemm in item.planPricingBenefitsModels)
                                        {
                                            @if (itemm.Answer == true)
                                            {
                                                <ul class="content-list">
                                                    <li>@itemm.Question</li>
                                                </ul>
                                                <br />
                                            }
                                            else
                                            {
                                                <ul class="content-list aligncenter">
                                                    <li class="disable">@itemm.Question</li>
                                                </ul>
                                                <br />
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="pricingTable-signup">
                                    <a href="/subscription/subscribetoplan?id=@item.PricingPlanModel.Id">Subscribe</a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="aligncenter">No plans</p>
                }
            </div>
        </div>
    </div>
    <br />
    <br />
}