@model SleekPredictionPunter.Model.PricingPlan.PlanPricingCreateDto
@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
   .pricingTable{
    font-family: 'Lato', sans-serif;
    text-align: center;
    margin: 0 15px;
    border-radius: 20px 20px 0 0;
}
.pricingTable .pricingTable-header{
    background: linear-gradient(to right,#6e38c4,#59a1ed);
    padding: 15px;
    border-radius: 20px 20px 0 0;
}
.pricingTable .title{
    color: #fff;
    font-size: 30px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0;
}
.pricingTable .pricing-content{
    background-color: #fff;
    padding: 25px 0 30px;
}
.pricingTable .price-value{
    color: #222;
    margin: 0 0 30px;
}
.pricingTable .price-value .amount{
    font-size: 60px;
    font-weight: 800;
    line-height: 60px;
    margin: 0 0 10px;
    display: inline-block;
}
.pricingTable .price-value .amount-sm{
    font-size: 30px;
    vertical-align: top;
    display: inline-block;
}
.pricingTable .price-value .duration{
    background-color: #c1deff;
    font-size: 18px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 11px 10px 9px;
    display: block;
}
.pricingTable .content-list{
    padding: 0;
    margin: 0 ;
    list-style: none;
    display: inline-block;
}
.pricingTable .content-list li{
    color: #222;
    font-size: 17px;
    font-weight: 600;
    text-transform: capitalize;
    text-align: left;
    padding: 0 0 0 30px;
    margin: 0 0 15px;
    position: relative;
}
.pricingTable .content-list li:last-child{ margin-bottom: 0; }
.pricingTable .content-list li:before{
    content: "\f00c";
    color: #fff;
    background: #58f4cd;
    font-family: "Font Awesome 5 Free";
    font-size: 13px;
    font-weight: 900;
    text-align: center;
    line-height: 20px;
    height: 20px;
    width: 20px;
    border-radius: 20px;
    position: absolute;
    left: 0;
    top: 3px;
}
.pricingTable .content-list li.disable:before{
    content: "\f00d";
    background: #ff737e;
}
.pricingTable .pricingTable-signup{
    background: linear-gradient(to right,#6e38c4,#59a1ed);
    padding: 30px 0;
    margin: 0 15px;
    border-radius: 0 0 25px 25px;
    box-shadow: 0px 15px 2px -5px rgba(0,0,0,0.3) inset;
}
.pricingTable .pricingTable-signup a{
    color: #222;
    background: #fff;
    font-size: 20px;
    text-transform: uppercase;
    padding: 6px 15px;
    border-radius: 50px;
    box-shadow: 0 5px 1px rgba(0,0,0,0.3);
    transition: all 0.3s ease 0s;
}
.pricingTable .pricingTable-signup a:hover{
    text-shadow: 0 2px 1px #999;
    box-shadow: none;
}
.pricingTable.pink .pricingTable-header,
.pricingTable.pink .pricingTable-signup{
    background:linear-gradient(to right,#e93074,#e47fc3);
}
.pricingTable.pink .price-value .duration{ background-color: #ffccea; }
.pricingTable.green .pricingTable-header,
.pricingTable.green .pricingTable-signup{
    background:linear-gradient(to right,#75ce46,#57e0b5);
}
.pricingTable.green .price-value .duration{ background-color: #aaffe2; }
media only screen and (max-width: 990px){
    .pricingTable{ margin-bottom: 30px; }
}
media only screen and (max-width: 576px){
    .pricingTable{ margin: 0 0 30px; }
}
</style>

<!-- breadcrumb begin -->
<div class="breadcrumb-bettix register-page">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-7">
                <div class="breadcrumb-content">
                    <h2>Register</h2>
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>
                            Subscription
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<br />
<div class="demo">
    <div class="container">
        <div class="row">
            @if (Model.PricingPlanModel.Any())
            {
                @foreach (var item in Model.PricingPlanModel)
                 {
                    <div class="col-md-4 col-sm-6 col--6">
                        <div class="pricingTable">
                            <div class="pricingTable-header">
                                <h3 class="title">@item.PlanName</h3>
                            </div>
                            <div class="pricing-content">
                                <div class="price-value">
                                    <span class="amount">N @item.Price</span>
                                    <span class="duration">per month</span>
                                </div>
                                @foreach (var itemm in Model.planPricingBenefitsModels)
                                {
                                    @if (itemm.Answer == true)
                                    {
                                        <ul class="content-list">
                                            <li>@itemm.Question</li>
                                        </ul>
                                    }
                                    else
                                    {
                                        <ul class="content-list">
                                            <li class="disable">@itemm.Question</li>
                                        </ul>
                                    }
                                }
                            </div>
                            <div class="pricingTable-signup">
                                <a href="#">Subscribe</a>
                            </div>
                        </div>
                    </div>
                 }
            }
        </div>
    </div>
</div>