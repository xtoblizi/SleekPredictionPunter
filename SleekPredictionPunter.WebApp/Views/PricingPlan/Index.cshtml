@model IEnumerable<SleekPredictionPunter.Model.PricingPlan.PlanWithBenefitsDto>
@{
    ViewData["Title"] = "Create";
    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
		.pricingTable {
			font-family: 'Lato', sans-serif;
			text-align: center;
			margin: 0 7px;
		}

        .pricingTable .pricingTable-header {
            background: linear-gradient(to right,black,black);
            padding: 20px;
        }

        .pricingTable .title {
            color: #fff;
            font-size: 17px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin: 0;
        }

        .pricingTable .pricing-content {
            background-color: white;
            padding:18px 2px 22px 4px;
        }

        .pricingTable .price-value {
            color: red;
            margin: 0 0 30px;
        }

            .pricingTable .price-value .amount {
                font-size: 25px;
                font-weight: 800;
                margin: 0 0 10px;
                display: inline-block;
            }

            .pricingTable .price-value .amount-sm {
                font-size: 2530px;
                vertical-align: top;
                display: inline-block;
            }

        /*.pricingTable .price-value .duration {
            font-size: 18px;
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: block;
        }*/

        .pricingTable .content-list {
            padding: 0;
            margin: 0;
            list-style: none;
            display: inline-block;
            text-align: left;
            align-content: flex-start;
            float: left;
        }

            .pricingTable .content-list li {
                color: #222;
                font-size: 15px;
                float: left;
                font-weight: 300;
                text-align: left;
                padding: 0 0 0 60px;
                margin: 0 0 15px;
                margin-left: 7px;
                position: relative;
            }

                /*.pricingTable .content-list li:last-child {
                    margin-bottom: 0;
                }*/

                .pricingTable .content-list li:before {
                    content: "\f00c";
                    color: #fff;
                    background: #58f4cd;
                    font-family: "Font Awesome 5 Free";
                    font-size: 13px;
                    font-weight: 900;
                    text-align: center;
                    line-height: 20px;
                    height: 20px;
                    width: 20px;
                    border-radius: 20px;
                    position: absolute;
                    left: 0;
                    top: 3px;
                }

                .pricingTable .content-list li.disable:before {
                    content: "\f00d";
                    background: #ff737e;
                }

        .pricingTable .pricingTable-signup {
            background: linear-gradient(to right,White,White);
            padding: 30px 0;
            margin: 0 15px;
            /*box-shadow: 0px 15px 2px -5px rgba(0,0,0,0.3) inset;*/
        }

            .pricingTable .pricingTable-signup a {
                background: #fff;
                font-size: 15px;
                font-weight: bold;
                color: royalblue;
                text-transform: uppercase;
                padding: 6px 15px;
                border-radius: 50px;
                box-shadow: 0 5px 1px rgba(0,0,0,0.3);
                transition: all 0.3s ease 0s;
            }

                .pricingTable .pricingTable-signup a:hover {
                    text-shadow: 0 2px 1px #999;
                    box-shadow: none;
                }

        .pricingTable.pink .pricingTable-header,
        .pricingTable.pink .pricingTable-signup {
            background: linear-gradient(to right,#e93074,#e47fc3);
        }

        .pricingTable.pink .price-value .duration {
            background-color: #ffccea;
        }

        .pricingTable.green .pricingTable-header,
        .pricingTable.green .pricingTable-signup {
            background: linear-gradient(to right,#75ce46,#57e0b5);
        }

        .pricingTable.green .price-value .duration {
            background-color: #aaffe2;
        }

    media only screen and (max-width: 990px) {
        .pricingTable

    {
        margin-bottom: 30px;
    }    }

    media only screen and (max-width: 576px) {
        .pricingTable

    {
        margin: 0 0 30px;
    } }

</style>


<!-- breadcrumb begin -->
<div class="breadcrumb-bettix betslip-page" style="background-color:black; background-image:none">
    <div class="container">
        <div class="row">
            <div class="col-xl-7 col-lg-7">
                <div class="breadcrumb-content">
                    <h2>Pricing Plans</h2>
                </div>
            </div>
        </div>
    </div>
</div>

