@model SleekPredictionPunter.Model.PricingPlan.PlanBenefitQuestionsModel

@{
    ViewData["Title"] = "CreateNewQuestion";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CreateNewQuestion</h2>

<h4>PlanBenefitQuestionsModel</h4>
<hr />
