@model IEnumerable<SleekPredictionPunter.Model.PricingPlan.PricingPlanModel>
@{
    ViewData["Title"] = "listofplans";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .pricingTable {
        font-family: 'Lato', sans-serif;
        text-align: center;
        margin: 0 15px;
        border-radius: 20px 20px 0 0;
    }

        .pricingTable .pricingTable-header {
            background: linear-gradient(to right,#6e38c4,#59a1ed);
            padding: 15px;
            border-radius: 20px 20px 0 0;
        }

        .pricingTable .title {
            color: #fff;
            font-size: 30px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin: 0;
        }

        .pricingTable .pricing-content {
            background-color: #fff;
            padding: 25px 0 30px;
        }

        .pricingTable .price-value {
            color: #222;
            margin: 0 0 30px;
        }

            .pricingTable .price-value .amount {
                font-size: 60px;
                font-weight: 800;
                line-height: 60px;
                margin: 0 0 10px;
                display: inline-block;
            }

            .pricingTable .price-value .amount-sm {
                font-size: 30px;
                vertical-align: top;
                display: inline-block;
            }

            .pricingTable .price-value .duration {
                background-color: #c1deff;
                font-size: 18px;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
                padding: 11px 10px 9px;
                display: block;
            }

        .pricingTable .content-list {
            padding: 0;
            margin: 0;
            list-style: none;
            display: inline-block;
        }

            .pricingTable .content-list li {
                color: #222;
                font-size: 17px;
                font-weight: 600;
                text-transform: capitalize;
                text-align: left;
                padding: 0 0 0 30px;
                margin: 0 0 15px;
                position: relative;
            }

                .pricingTable .content-list li:last-child {
                    margin-bottom: 0;
                }

                .pricingTable .content-list li:before {
                    content: "\f00c";
                    color: #fff;
                    background: #58f4cd;
                    font-family: "Font Awesome 5 Free";
                    font-size: 13px;
                    font-weight: 900;
                    text-align: center;
                    line-height: 20px;
                    height: 20px;
                    width: 20px;
                    border-radius: 20px;
                    position: absolute;
                    left: 0;
                    top: 3px;
                }

                .pricingTable .content-list li.disable:before {
                    content: "\f00d";
                    background: #ff737e;
                }

        .pricingTable .pricingTable-signup {
            background: linear-gradient(to right,#6e38c4,#59a1ed);
            padding: 30px 0;
            margin: 0 15px;
            border-radius: 0 0 25px 25px;
            box-shadow: 0px 15px 2px -5px rgba(0,0,0,0.3) inset;
        }

            .pricingTable .pricingTable-signup a {
                color: #222;
                background: #fff;
                font-size: 20px;
                text-transform: uppercase;
                padding: 6px 15px;
                border-radius: 50px;
                box-shadow: 0 5px 1px rgba(0,0,0,0.3);
                transition: all 0.3s ease 0s;
            }

                .pricingTable .pricingTable-signup a:hover {
                    text-shadow: 0 2px 1px #999;
                    box-shadow: none;
                }

        .pricingTable.pink .pricingTable-header,
        .pricingTable.pink .pricingTable-signup {
            background: linear-gradient(to right,#e93074,#e47fc3);
        }

        .pricingTable.pink .price-value .duration {
            background-color: #ffccea;
        }

        .pricingTable.green .pricingTable-header,
        .pricingTable.green .pricingTable-signup {
            background: linear-gradient(to right,#75ce46,#57e0b5);
        }

        .pricingTable.green .price-value .duration {
            background-color: #aaffe2;
        }

    media only screen and (max-width: 990px) {
        .pricingTable

    {
        margin-bottom: 30px;
    }

    

    media only screen and (max-width: 576px) {
        .pricingTable
    {
        margin: 0 0 30px;
    }
    
</style>
<br />
<br />
<!-- row -->
<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel" style="padding:20px">
            <div class="row">
                <div class="col-xl-8 col-lg-4 col-md-4 col-sm-12">
                    <h4><i class="fa fa-angle-right"></i> Plans</h4>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-6 col-sm-12">
                    <a href="../../pricingplan/CreateNewPlan" class="btn btn-primary">Create New Plan</a>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-6 col-sm-12">
                   <a href="../../pricingplan/CreateNewQuestion" class="btn btn-default">Create Questions</a>
                </div>
            </div>
			<br/>
			<div class="table-responsive" style="padding:20px">
				<table class="table table-striped table-advance table-hover table-responsive">
					<thead>
						<tr>
							<th>Plan Name</th>
							<th>Price</th>
							<th>Duration</th>
							<th>Date Time Created</th>
							<th>Status</th>
							<th></th>
						</tr>
					</thead>
					@foreach (var item in Model)
					{
						<tbody>
							<tr>
								<td>@item.PlanName </td>
								<td>@item.Price</td>
								<td>@item.Duration Month(s)</td>
								<td>@item.DateCreated.ToString()</td>
								@if (item.EntityStatus == EntityStatusEnum.Active)
								{
									<td><span class="label label-success label-mini">Active</span></td>
								}
								else
								{
									<td><span class="label label-warning label-mini">In-Active</span></td>
								}
								<td>
									<button class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
									<button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
									<button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
								</td>
							</tr>
						</tbody>
					}
				</table>
			</div>
            
        </div>
    </div>
</div>