@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User) || Context.Session.GetString("userEmail") != null)
{
    <ul>
        <li>
            <a id="manage" class="nav-link" style="color:white;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @UserManager.GetUserName(User)</a>
            @*<a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
        </li>
        <li>
            <form id="logoutForm" class="form-inline"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link" style="color:white;">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul>
        <li>
            <a class="nav-link" style="color:white;" id="register"  asp-area="Identity" asp-route-userType="2"  asp-route-returnUrl="@ViewBag.Context"  asp-page="/Account/Register"><b>Register</b></a>
        </li>
        <li>
            <a class="nav-link" id="login" style="color:white;" asp-area="Identity" asp-page="/Account/Login"><b>Login</b></a>
        </li>
    </ul>
}
